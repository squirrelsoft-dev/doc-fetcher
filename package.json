{
    "name": "@squirrelsoft-dev/doc-fetcher",
    "version": "2.9.1",
    "description": "Fetch, cache, and version documentation from web sources for Claude Code",
    "main": "scripts/index.js",
    "type": "module",
    "scripts": {
        "fetch": "node scripts/fetch-docs.js",
        "list": "node scripts/list-docs.js",
        "update": "node scripts/update-docs.js",
        "generate-skill": "node scripts/generate-skill.js",
        "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
        "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
        "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage"
    },
    "keywords": [
        "claude-code",
        "plugin",
        "documentation",
        "cache",
        "llms.txt",
        "ai",
        "versioning"
    ],
    "author": {
        "name": "Squirrelsoft Dev Tools",
        "url": "https://squirrelsoft.dev"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/squirrelsoft-dev/doc-fetcher.git"
    },
    "bugs": {
        "url": "https://github.com/squirrelsoft-dev/doc-fetcher/issues"
    },
    "homepage": "https://github.com/squirrelsoft-dev/doc-fetcher#readme",
    "dependencies": {
        "axios": "^1.6.5",
        "cheerio": "^1.0.0-rc.12",
        "commander": "^11.1.0",
        "natural": "^8.1.0",
        "p-limit": "^5.0.0",
        "remark": "^15.0.1",
        "remark-frontmatter": "^5.0.0",
        "remark-gfm": "^4.0.1",
        "remark-parse": "^11.0.0",
        "robots-parser": "^3.0.1",
        "turndown": "^7.1.2",
        "unist-util-visit": "^5.0.0",
        "unist-util-visit-parents": "^6.0.2",
        "xml2js": "^0.6.2"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "devDependencies": {
        "@jest/globals": "^30.2.0",
        "jest": "^30.2.0"
    },
    "jest": {
        "testEnvironment": "node",
        "transform": {},
        "testMatch": [
            "**/tests/**/*.test.js"
        ],
        "collectCoverageFrom": [
            "scripts/**/*.js",
            "!scripts/test.js",
            "!scripts/**/index.js"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 10,
                "functions": 20,
                "lines": 10,
                "statements": 10
            }
        }
    }
}
